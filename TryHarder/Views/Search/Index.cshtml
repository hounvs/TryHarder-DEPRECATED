@using TryHarder.Models
@model QueryViewModel
@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron text-center">
    <h1>TryHarder.gg</h1>
    <p class="lead">TryHarder is a tool that does math and tells you how to get better at League.</p>
</div>

<div class="row">
    @using (Html.BeginForm("Results", "Search", FormMethod.Post,
            new { @class = "form-inline text-center" }))
    {
        <div class="col-xs-8 col-sm-6 col-md-6 col-lg-6 form-group">
            @Html.TextBoxFor(m => m.SummonerName, new { @class = "form-control", placeholder = "Summoner Name" })
            @Html.ValidationMessageFor(m => m.SummonerName)
        </div>
        <div class="col-xs-4 col-sm-3 col-md-3 col-lg-3 form-group">
            @Html.DropDownListFor(m => m.SelectedRegionId, Model.Regions, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.SelectedRegionId)
        </div>
        <div class="col-xs-12 col-sm-3 col-md-3 col-lg-3 form-group">
            <button type="submit" class="btn btn-primary col-xs-12 col-sm-12 col-md-12 col-lg-12">Do math!</button>
        </div>
    }
</div>